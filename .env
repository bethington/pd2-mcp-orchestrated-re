# Environment Configuration for MCP-Orchestrated Platform
# Copy this file to .env and customize as needed

# Session Configuration
SESSION_ID=default_session
AUTO_START_GAME=true

# Debug and Logging
DEBUG=false
LOG_LEVEL=INFO
WINE_DEBUG=-all

# Container Configuration
ENABLE_WEB_VNC=true
VNC_PASSWORD=

# Analysis Settings
MONITORING_INTERVAL=1000
SECURITY_SCAN_INTERVAL=60000
MEMORY_ANALYSIS_DEPTH=detailed

# Network Configuration
CAPTURE_INTERFACE=eth0
CAPTURE_FILTER=port 4000 or port 6112 or port 6113

# Database Configuration
DGRAPH_ALPHA_PORT=8081
REDIS_PORT=6379

# Dashboard Configuration
WEB_DASHBOARD_PORT=80
MCP_COORDINATOR_PORT=8000

# Development Configuration
HOT_RELOAD=false
JUPYTER_PORT=8888
PORTAINER_PORT=9443

# Security Configuration
ENABLE_SECURITY_SCANNING=true
ENABLE_BEHAVIORAL_ANALYSIS=true
ENABLE_MEMORY_PROTECTION=true
