# .env.test - Testing environment overrides
# Source this file in testing: docker-compose --env-file config/environments/.env.test

# Testing-specific session management
SESSION_ID=test-${CI_PIPELINE_ID:-local}    # Unique test session ID
DEBUG_MODE=true
LOG_LEVEL=DEBUG

# Testing database settings (isolated/ephemeral)
REDIS_URL=redis://localhost:6381           # Separate Redis for tests
DGRAPH_ENDPOINT=http://localhost:8083      # Separate Dgraph for tests

# Disable external dependencies for testing
ENABLE_WINE=false                           # Mock Wine environment for tests
MOCK_GAME_DATA=true                         # Use mock game data
ENABLE_TLS=false                            # Disable TLS for test simplicity

# Testing performance settings (minimal resources)
WORKER_PROCESSES=1                          # Single worker for tests
MAX_MEMORY_USAGE=1G                         # Minimal memory for tests
CPU_LIMIT=0.5                               # Half CPU for tests

# Testing data settings
BACKUP_RETENTION_DAYS=1                     # Minimal retention for tests
USE_IN_MEMORY_STORAGE=true                  # Ephemeral storage for tests

# Testing security settings (relaxed for CI/CD)
API_RATE_LIMIT=10000                        # No rate limiting in tests
JWT_SECRET_KEY=test-secret-key              # Fixed test secret

# Testing network settings
NETWORK_SUBNET=172.30.0.0/16               # Separate network for tests
EXPOSE_DEBUG_PORTS=true                     # Allow debugging in tests

# Mock external services
MOCK_EXTERNAL_APIS=true                     # Mock external API calls
DISABLE_NETWORK_CALLS=true                  # Prevent external network calls