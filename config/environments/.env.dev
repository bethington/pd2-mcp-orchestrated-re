# .env.dev - Development environment overrides
# Source this file in development: docker-compose --env-file config/environments/.env.dev

# Development-specific settings
DEBUG_MODE=true
HOT_RELOAD=true
LOG_LEVEL=DEBUG
WINEDEBUG=+all                              # Verbose Wine debugging
ENABLE_PROFILING=true
EXPOSE_DEBUG_PORTS=true

# Development-specific ports (to avoid conflicts)
D2_VNC_PORT=5901
MCP_COORDINATOR_PORT=8001
WEB_DASHBOARD_PORT=81

# Development database settings (separate from production)
REDIS_URL=redis://localhost:6380           # Separate Redis for dev
DGRAPH_ENDPOINT=http://localhost:8082      # Separate Dgraph for dev

# Relaxed security for development
ENABLE_TLS=false
API_RATE_LIMIT=1000                         # Higher rate limit for dev testing
JWT_SECRET_KEY=dev-secret-key-change-me     # Development-only secret

# Development performance settings
WORKER_PROCESSES=2                          # Lower resource usage for dev
MAX_MEMORY_USAGE=2G                         # Reduced memory for dev
CPU_LIMIT=1.0                               # Single CPU for dev

# Development data retention (shorter for faster iteration)
BACKUP_RETENTION_DAYS=7                     # Shorter retention in dev