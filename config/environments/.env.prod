# .env.prod - Production environment overrides
# Source this file in production: docker-compose --env-file config/environments/.env.prod

# Production security hardening
DEBUG_MODE=false
LOG_LEVEL=WARN
WINEDEBUG=-all                              # Minimal Wine debugging in production
ENABLE_PROFILING=false
EXPOSE_DEBUG_PORTS=false

# Production security settings
ENABLE_TLS=true
FORCE_HTTPS=true
JWT_SECRET_KEY=${VAULT_JWT_SECRET}          # From secure secret management
API_RATE_LIMIT=50                           # Lower rate limit for production
HSTS_MAX_AGE=31536000                       # HTTP Strict Transport Security
X_FRAME_OPTIONS=DENY                        # Clickjacking protection
X_CONTENT_TYPE_OPTIONS=nosniff              # MIME sniffing protection

# Production performance optimization
WORKER_PROCESSES=8                          # More workers for production load
MAX_MEMORY_USAGE=8G                         # Higher memory allocation
CPU_LIMIT=4.0                               # More CPU resources

# Production database settings (external/managed services)
REDIS_URL=redis://redis.production.internal:6379
DGRAPH_ENDPOINT=https://dgraph.production.internal:8080

# Production data retention
BACKUP_RETENTION_DAYS=90                    # Longer retention for production
LOG_LEVEL=WARN                              # Reduced logging verbosity

# Production monitoring
ENABLE_MONITORING=true
METRICS_ENDPOINT=http://prometheus:9090
ALERTS_WEBHOOK=${ALERTS_WEBHOOK_URL}

# Production network security
CORS_ALLOWED_ORIGINS=https://yourdomain.com
NETWORK_SUBNET=10.0.0.0/16                 # Production network range